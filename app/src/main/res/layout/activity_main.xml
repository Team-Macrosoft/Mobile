<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/actionbarMain"
        layout="@layout/actionbar_app" />

    <ListView
        android:id="@+id/slotList"
        android:layout_width="407dp"
        android:layout_height="493dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionbarMain" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="185dp"
        android:layout_height="58dp"
        android:text="@string/btnRefresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/slotList"
        app:layout_constraintStart_toStartOf="@+id/slotList"
        app:layout_constraintTop_toBottomOf="@+id/slotList"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>